        <Label Content="Base model" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbBase" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="216"/>
        <Label Content="LoRA" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="83"/>
        <ComboBox x:Name="cbLora" HorizontalAlignment="Left" Margin="105,45,0,0" VerticalAlignment="Top" Width="216"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="83"/>

        <hc:TextBox x:Name="tbOutpath" HorizontalAlignment="Left" Margin="112,0,0,10" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="218"/>
